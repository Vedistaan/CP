string intToBinary (int n) {
    string res;
    for ( ; n != 0; n /= 2)
        if (n&1)
            res += '1';
        else
            res += '0';
    reverse (res.begin(), res.end());

    return res;
}

int binToInteger(string n) {
    int res = 0;
    for(int i = 0; n[i]; i++)
        res = res * 2 + n[i] - '0';

    return res;
}
